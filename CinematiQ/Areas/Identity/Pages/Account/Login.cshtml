@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/Login/login.css" asp-append-version="true" />

<div class="container-fluid pt-5 mt-0">
    <div class="row">
        <div class="col-12">
            <div class="col-12 h-100">
                <div class="login-wrapper">
                    <div class="login-container">
                        <div class="registrationForm">
                            <section>
                                <form id="account" method="post">
                                    <h2>Увійдіть до свого акаунту</h2>
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email" class="form-label">Ваш E-Mail</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.Password" class="form-label">Пароль</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex flex-row-reverse">
                                        <div class="p-2">
                                            <div class="checkbox mb-3">
                                                <label asp-for="Input.RememberMe" class="form-label">
                                                    <p><input class="form-check-input" asp-for="Input.RememberMe"/>
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)</p>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row-reverse">
                                        <div class="p-2">
                                            <button id="login-submit" type="submit" class="button btn-lg btn-primary">Увійти</button>
                                        </div>
                                        <div class="p-2">
                                            <a class="link" id="forgot-password" asp-page="./ForgotPassword">Забули пароль?</a>
                                        </div>
                                        <div class="p-2">
                                            <a class="link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Реєстрація</a>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}