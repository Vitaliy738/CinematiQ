<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinematiQ</title> @* ready *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinematiQ.styles.css" asp-append-version="true" />
</head>
<body>
<div class="wrap">
    <div class="wrap-main wrap-center">
        <header class="header fx-row fx-middle">
            <div class="logo">CINEMATIQ</div>
            <div class="search-bar">
                <input type="text" placeholder="Пошук...">
                <button type="button">
                    <img src="/images/Glass_white.svg" alt="Search Icon">
                </button>
            </div>
           
            <div class="user-icons">
                <img src="~/images/колокол.svg" alt="Notification Icon">
                <partial name="_LoginPartial"/>
            </div> 
        </header>
        <div class="carou-sect">
            <ul class="menunav_top">
                <div class="left-nav">
                    <li><a asp-controller="Home" asp-action="Index">Головна</a></li>
                    <li><a asp-controller="Home" asp-action="Profile">Профіль користувача</a></li>
                    <li><a href="">Новинки</a></li>
                    <li><a href="">Анонси</a></li>
                </div>
                <div class="center-nav">
                    <li><a asp-controller="Home" asp-action="FilterMovie">Фільми</a></li>
                    <li><a href="">Серіали</a></li>
                    <li><a href="">Мультфільми</a></li>
                    <li><a href="">Аніме</a></li>
                </div>
                <div class="right-nav">
                    <li><a href="">Закладки</a></li>
                </div>
            </ul>
        </div>
        <div class="carou-sect">
            <ul class="menunav_top">
                <div class="left-nav">
                    <li><a asp-controller="Movie" asp-action="Index">Фільми</a></li>
                    <li><a asp-controller="Country" asp-action="Index">Країни</a></li>
                    <li><a asp-controller="Genre" asp-action="Index">Жанри</a></li>
                </div>
            </ul>
        </div>
        <div class="cols fx-row">
            <main role="main" class="fx-1">
                @RenderBody()
            </main>
        </div>
    </div>
</div>

<script src="~/js/signalr.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>