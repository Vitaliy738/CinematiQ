@model X.PagedList.IPagedList<CinematiQ.Models.Entities.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Всі доступні фільми</h1>

<p>
    <a asp-action="Create">Додати новий фільм</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GetEnumerator().Current.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetEnumerator().Current.YearOfRelease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetEnumerator().Current.MovieType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetEnumerator().Current.MovieStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfRelease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="pagination">
    @if (Model.PageCount > 1)
    {
        if (Model.HasPreviousPage)
        {
            <a class="pagination-arrow" asp-controller="Movie" asp-action="Index" asp-route-pageSize="@Model.PageSize" asp-route-pageNumber="@(Model.PageNumber - 1)">&lt;</a>
        }

        @for (int i = 1; i <= 5 && i <= Model.PageCount; i++)
        {
            <a class="page-number @(i == Model.PageNumber ? "page-number-active" : "")" asp-controller="Movie" asp-action="Index" asp-route-pageSize="@Model.PageSize" asp-route-pageNumber="@i">@i</a>
        }

        @if (Model.PageCount > 5)
        {
            if (Model.PageNumber > 5)
            {
                <span class="ellipsis">...</span>
            }
            <a class="page-number" asp-controller="Movie" asp-action="Index" asp-route-pageSize="@Model.PageSize" asp-route-pageNumber="@Model.PageCount">@Model.PageCount</a>
        }

        if (Model.HasNextPage)
        {
            <a class="pagination-arrow" asp-controller="Movie" asp-action="Index" asp-route-pageSize="@Model.PageSize" asp-route-pageNumber="@(Model.PageNumber + 1)">&gt;</a>
        }
    }
</div>